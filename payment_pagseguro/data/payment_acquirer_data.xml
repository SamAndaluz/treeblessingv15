<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">

    <record id="payment_acquirer_pagseguro" model="payment.acquirer">
            <field name="name">Pagseguro</field>
            <field name="image_128" type="base64" file="payment_pagseguro/static/src/img/pagseguro_icon.png"/>
            <field name="provider">pagseguro</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="redirect_form_view_id" ref="redirect_form"/>
            <field name="state">test</field>
            <field name="pagseguro_email_account">email@example.com</field>
            <field name="pagseguro_token">dummy</field>
            <field name="pre_msg">
                <![CDATA[
<p>As informações de transferência serão fornecidas após a escolha do método de pagamento.</p>]]>
            </field>
            <field name="pending_msg"><![CDATA[
      <p>Pendente. O seu pagamento on-line foi processado com sucesso. Mas o seu pedido ainda não foi validado.</p>]]></field>
            <field name="done_msg"><![CDATA[
      <p>Pronto, o seu pagamento on-line foi processado com sucesso. Obrigado pelo seu pedido!</p>]]></field>
            <field name="cancel_msg"><![CDATA[
      <p>Cancelado. O seu pagamento foi cancelado.</p>]]></field>
            <field name="description" type="html">
                <p>
                    Muito além de pagamentos online:
                    uma infraestrutura financeira para seu negócio crescer
                </p>
                <ul class="list-inline">
                    <li><i class="fa fa-check"/>eCommerce</li>
                    <li><i class="fa fa-check"/>Botão de pagamento em cotações online</li>
                </ul>
            </field>
        </record>

        <record id="payment_method_pagseguro" model="account.payment.method">
        <field name="name">Pagseguro</field>
        <field name="code">pagseguro</field>
        <field name="payment_type">inbound</field>
    </record>
  </data>
</odoo>
