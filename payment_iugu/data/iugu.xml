<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="payment_acquirer_iugu" model="payment.acquirer">
            <field name="name">Iugu</field>
            <field name="image_128" type="base64" file="payment_iugu/static/description/icon.png"/>
            <field name="provider">iugu</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="redirect_form_view_id" ref="redirect_form"/>
            <field name="state">test</field>
            <field name="pre_msg">
                <![CDATA[ <p>Você vai ser redirecionado ao site da IUGU para capturar os dados de pagamento.</p> ]]>
            </field>
            <field name="description" type="html">
                <p>
                    Muito além de pagamentos online:
                    uma infraestrutura financeira para seu negócio crescer
                </p>
                <ul class="list-inline">
                    <li><i class="fa fa-check"/>eCommerce</li>
                    <li><i class="fa fa-check"/>Botão de pagamento em cotações online</li>
                </ul>
            </field>
        </record>

        <record id="payment_method_iugu" model="account.payment.method">
        <field name="name">Iugu</field>
        <field name="code">iugu</field>
        <field name="payment_type">inbound</field>
    </record>
    </data>
</odoo>
